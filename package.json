{
  "name": "claude-ketchup",
  "version": "0.12.0",
  "authors": [
    {
      "name": "Sam Hatoum"
    }
  ],
  "description": "Husky-style hooks and skills management for Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeOnAuto/claude-ketchup.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "claude-ketchup": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && pnpm build:bundle",
    "build:bundle": "esbuild scripts/session-start.ts scripts/pre-tool-use.ts scripts/user-prompt-submit.ts scripts/auto-continue.ts --bundle --platform=node --target=node18 --format=cjs --outdir=dist/bundle/scripts --external:typescript",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "turbo run build type-check test && pnpm lint",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "install:local": "pnpm tsx bin/cli.ts install --local",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "skills",
    "automation"
  ],
  "author": "Sam Hatoum",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.8",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.0.0",
    "turbo": "^2.7.5",
    "typescript": "^5.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "templates/",
    "scripts/",
    "commands/",
    ".ketchup/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
